class <%= class_name %>Mailer < ApplicationMailer
  <%- if @fields.empty? %>  def initialize
  <%- else %>  def initialize(<%= @fields.map{|f| "#{f.name} : #{f.cr_type}"}.join(", ") %>)
  <%- end -%>
    to "to@example.com"
    subject "Example Subject"
    text render("mailers/<%= @name %>_mailer.txt.<%= config.language %>")
    html render("mailers/<%= @name %>_mailer.html.<%= config.language %>", "mailer.<%= config.language %>")
  end
end
